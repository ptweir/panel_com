#!/usr/bin/env python
#
# Example using panel_com
from panel_com import PanelCom
import time

ctlr = PanelCom()
ctlr = PanelCom(userport='/dev/ttyUSB1')
ctlr.AllOn()
print 'all on'
time.sleep(1)
ctlr.AllOff()
print 'all off'

ctlr.SetPatternID(1)
time.sleep(.1)
ctlr.SetMode(0,0)
time.sleep(.1)
ctlr.SetGainOffset(1,0,1,0)
time.sleep(.1)
ctlr.SetPositions(2,2)
time.sleep(.1)
ctlr.Start()
print 'start'
time.sleep(3)
ctlr.Stop()
time.sleep(.1)
ctlr.AllOff()
time.sleep(.1)
print 'done'
